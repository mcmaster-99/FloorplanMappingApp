{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel"
  ],
  "rules": {
    "babel/generator-star-spacing": 1,
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "globals": {
    "chai": true,
    "expect": true,
    "sinon": true
  }
}
